---
import "../styles/global.css";
import { Header } from "../components/Header.tsx";
import { ClientRouter } from "astro:transitions";
---
<script is:inline>
	let isTransitioning = false;

	const applyTheme = () => {
		const getThemePreference = () => {
			if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
				return localStorage.getItem('theme');
			}
			return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
		};
		const isDark = getThemePreference() === 'dark';
		document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
	};

	// Apply theme on initial load
	applyTheme();

	// Set transitioning flag before swap
	document.addEventListener("astro:before-swap", () => {
		isTransitioning = true;
	});

	// Re-apply theme after page swaps and reset flag
	document.addEventListener("astro:after-swap", () => {
		isTransitioning = false; applyTheme() 
	});

	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			// Don't update localStorage during transitions
			if (isTransitioning) return;
			
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
</script>

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/src/assets/logo_final_dark.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Jared Delapasse</title>
	</head>
	<body class="text-sm">
	<Header client:load/>
		<main class="lg:px-56 xl:px-90 px-30  mt-10 "><slot  /></main>
	</body>
	<ClientRouter />
</html>

<style>
	html,
	body {
		font-family: 'Geist Mono Variable', monospace;
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
